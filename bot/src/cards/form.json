{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "${title}",
      "size": "Large",
      "wrap": true,
      "weight": "Bolder"
    },
    {
      "type": "Input.Text",
      "id": "name",
      "placeholder": "Enter your name",
      "isRequired": true,
      "errorMessage": "Please enter your name"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Submit",
      "verb": "formSubmit",
      "data": {}
    }
  ]
}